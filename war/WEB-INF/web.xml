<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Hqapps_sys</servlet-name>
		<servlet-class>com.hqapps.server.SystemServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Hqapps_data</servlet-name>
		<servlet-class>com.hqapps.server.ResourceServlet</servlet-class>
	</servlet>	
	<servlet>
		<servlet-name>Hqapps_media</servlet-name>
		<servlet-class>com.hqapps.server.MediaServlet</servlet-class>
	</servlet>	
	<servlet>
		<servlet-name>Hqapps_share</servlet-name>
		<servlet-class>com.hqapps.server.ShareServlet</servlet-class>
	</servlet>	
			
	<servlet-mapping>
		<servlet-name>Hqapps_sys</servlet-name>
		<url-pattern>/sys</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Hqapps_data</servlet-name>
		<url-pattern>/rs/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Hqapps_media</servlet-name>
		<url-pattern>/media/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Hqapps_share</servlet-name>
		<url-pattern>/share/*</url-pattern>
	</servlet-mapping>
		
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
